rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =========================================================
    // 1. HELPER FUNCTIONS
    // =========================================================

    function isSignedIn() {
      return request.auth != null;
    }

    // Basic ownership check
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Legacy support for older apps matched by Email
    function isEmailOwner(emailField) {
      return isSignedIn() && 
             request.auth.token.email_verified == true && 
             request.auth.token.email == emailField;
    }

    // ROBUST SUPER ADMIN CHECK
    function isSuperAdmin() {
      return isSignedIn() && (
        (request.auth.token.keys().hasAny(['globalRole']) && request.auth.token.globalRole == 'super_admin') ||
        request.auth.token.email == 'holmurod96@gmail.com'
      );
    }

    // COMPANY ADMIN: Can manage settings & team
    function isCompanyAdmin(companyId) {
      return isSignedIn() && (
        isSuperAdmin() || 
        (
          request.auth.token.keys().hasAny(['roles']) &&
          request.auth.token.roles.keys().hasAny([companyId]) &&
          request.auth.token.roles[companyId] == 'company_admin'
        )
      );
    }

    // COMPANY TEAM: HR/Recruiters (Read access + Operational Write)
    function isCompanyTeam(companyId) {
      return isSignedIn() && (
        isCompanyAdmin(companyId) || 
        (
          request.auth.token.keys().hasAny(['roles']) &&
          request.auth.token.roles.keys().hasAny([companyId]) &&
          request.auth.token.roles[companyId] in ['company_admin', 'hr_user', 'recruiter']
        )
      );
    }

    // STAFF CHECK (Any Dashboard User)
    function isStaff() {
      return isSignedIn() && 
             request.auth.token.keys().hasAny(['roles']) && 
             request.auth.token.roles.keys().size() > 0;
    }

    // =========================================================
    // 2. DATA VALIDATION (SIMPLIFIED)
    // =========================================================

    function isValidAuthenticatedApplication() {
      let data = request.resource.data;
      return (data.driverId == request.auth.uid) || 
             (data.applicantId == request.auth.uid);
    }

    function isValidGuestApplication(companyId) {
      let data = request.resource.data;
      return data.companyId == companyId &&
             data.applicantId is string;
    }

    // =========================================================
    // 3. COLLECTION RULES
    // =========================================================

    // --- SYSTEM SETTINGS (Crucial for Super Admin Dashboard) ---
    match /system_settings/{settingId} {
      allow read, write: if isSuperAdmin();
    }

    // --- COMPANIES ---
    match /companies/{companyId} {
      allow get: if true; 
      allow list: if isSuperAdmin() || request.query.limit <= 1;
      allow create, delete: if isSuperAdmin();
      allow update: if isCompanyAdmin(companyId);

      // --- SUBCOLLECTIONS ---
      match /templates/{templateId} {
        allow read: if isCompanyTeam(companyId) || isSuperAdmin();
        allow write: if isCompanyAdmin(companyId) || isSuperAdmin();
      }

      match /message_templates/{templateId} {
        allow read: if isCompanyTeam(companyId) || isSuperAdmin();
        allow write: if isCompanyAdmin(companyId) || isSuperAdmin();
      }

      match /bulk_sessions/{sessionId} {
        allow read, write: if isCompanyTeam(companyId) || isSuperAdmin();
        match /logs/{logId} {
             allow read: if isCompanyTeam(companyId) || isSuperAdmin();
        }
      }

      match /campaign_drafts/{draftId} {
        allow read, write: if isCompanyTeam(companyId) || isSuperAdmin();
      }

      match /segments/{segmentId} {
        allow read: if isCompanyTeam(companyId) || isSuperAdmin();
        allow write: if isCompanyAdmin(companyId) || isSuperAdmin();
        match /members/{memberId} {
            allow read: if isCompanyTeam(companyId) || isSuperAdmin();
            allow write: if isCompanyAdmin(companyId) || isSuperAdmin();
        }
      }

      match /stats_daily/{dateId} {
        allow read: if isCompanyTeam(companyId) || isSuperAdmin();
      }

      match /signing_requests/{requestId} {
         allow read: if isCompanyTeam(companyId) || 
                     (isSignedIn() && resource.data.recipientId == request.auth.uid) || 
                     isSuperAdmin();
         allow create: if isCompanyTeam(companyId);
         allow update: if isCompanyTeam(companyId) || (
                            isSignedIn() && 
                            resource.data.recipientId == request.auth.uid && 
                            request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'viewedAt', 'declinedReason', 'clientMetadata', 'signedAt', 'signatureData']) &&
                            (request.resource.data.status == 'signed' ? request.resource.data.signatureData != null : true)
                       );
         allow delete: if isCompanyAdmin(companyId);
      }

      match /applications/{applicationId} {
        allow create: if (isSignedIn() && isValidAuthenticatedApplication()) || 
                         (isValidGuestApplication(companyId)) || 
                         isCompanyTeam(companyId);
        allow read: if isCompanyTeam(companyId) || 
                    (isSignedIn() && (resource.data.applicantId == request.auth.uid || resource.data.driverId == request.auth.uid || isEmailOwner(resource.data.email))) ||
                    isSuperAdmin();
        allow update: if isCompanyTeam(companyId) || 
                      (isSignedIn() && (resource.data.applicantId == request.auth.uid || resource.data.driverId == request.auth.uid)) ||
                      isSuperAdmin();
        allow delete: if isCompanyAdmin(companyId) || isSuperAdmin();

        match /dq_files/{fileId} { 
          allow read: if isCompanyTeam(companyId) || isSuperAdmin() || (isSignedIn() && (resource.data.applicantId == request.auth.uid || resource.data.driverId == request.auth.uid));
          allow write: if isCompanyTeam(companyId) || isSuperAdmin(); 
        }
        match /general_documents/{fileId} { 
          allow read: if isCompanyTeam(companyId) || isSuperAdmin() || (isSignedIn() && (resource.data.applicantId == request.auth.uid || resource.data.driverId == request.auth.uid));
          allow write: if isCompanyTeam(companyId) || isSuperAdmin(); 
        }
        match /internal_notes/{noteId} { allow read, write: if isCompanyTeam(companyId) || isSuperAdmin(); }
        match /activity_logs/{activityId} { allow read, write: if isCompanyTeam(companyId) || isSuperAdmin(); }
        match /activities/{activityId} { allow read, write: if isCompanyTeam(companyId) || isSuperAdmin(); }
      }

      match /leads/{leadId} {
        allow read, write: if isCompanyTeam(companyId) || isSuperAdmin();
        match /activity_logs/{logId} { allow read, write: if isCompanyTeam(companyId) || isSuperAdmin(); }
        match /activities/{activityId} { allow read, write: if isCompanyTeam(companyId) || isSuperAdmin(); }
        match /internal_notes/{noteId} { allow read, write: if isCompanyTeam(companyId) || isSuperAdmin(); }
      }
      
      match /team/{userId} {
        allow read: if isSignedIn();
        allow write: if isCompanyAdmin(companyId) || isSuperAdmin();
      }

      match /integrations/{integrationId} {
        allow read: if isCompanyAdmin(companyId) || isSuperAdmin();
        allow update: if isCompanyAdmin(companyId) || isSuperAdmin();
        allow create, delete: if isSuperAdmin();
      }
    }

    // --- GLOBAL LEADS ---
    match /leads/{leadId} {
      allow create: if isSignedIn();
      allow read: if isSuperAdmin() || isOwner(leadId) || resource.data.userId == request.auth.uid || isEmailOwner(resource.data.email);
      allow update: if isSuperAdmin() || isOwner(leadId) || resource.data.userId == request.auth.uid || isStaff();
      allow delete: if isSuperAdmin();
    }

    // --- DRIVERS ---
    match /drivers/{driverId} {
      allow read: if isOwner(driverId) || isSuperAdmin() || isStaff();
      allow create, update: if (isSignedIn() && request.auth.uid == driverId) || isSuperAdmin();
      allow delete: if isSuperAdmin();
      match /drafts/{draftId} { allow read, write: if isOwner(driverId) || isSuperAdmin(); }
      match /saved_jobs/{jobId} { allow read, write: if isOwner(driverId) || isSuperAdmin(); }
      match /documents/{docId} { allow read, write: if isOwner(driverId) || isSuperAdmin(); }
    }

    // --- USERS ---
    match /users/{userId} {
      allow read: if isOwner(userId) || isSuperAdmin() || (isSignedIn() && isStaff());
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isOwner(userId) || isSuperAdmin();
      allow delete: if isSuperAdmin();
    }

    // --- MEMBERSHIPS ---
    match /memberships/{membershipId} {
      allow read: if isSignedIn() && (
          isSuperAdmin() || 
          resource.data.userId == request.auth.uid || 
          isCompanyAdmin(resource.data.companyId)
      );
      allow create, update: if isSuperAdmin() || (isCompanyAdmin(request.resource.data.companyId) && request.resource.data.role != 'super_admin');
      allow delete: if isSuperAdmin() || isCompanyAdmin(resource.data.companyId);
    }

    // --- NOTIFICATIONS ---
    match /notifications/{notificationId} {
      allow read, update, delete: if isSignedIn() && resource.data.recipientId == request.auth.uid;
      allow create: if isSignedIn();
    }

    // --- ANALYTICS ---
    match /analytics/{docId} {
      allow read: if isSuperAdmin();
      allow write: if false;
    }
    
    // --- RECRUITER LINKS ---
    match /recruiter_links/{code} {
      allow read: if true;
      allow create, update: if isStaff() || isSuperAdmin();
      allow delete: if isSuperAdmin();
    }

    // --- JOB POSTS ---
    match /job_posts/{postId} {
      allow read: if true;
      allow create: if isSignedIn() && isCompanyTeam(request.resource.data.companyId);
      allow update: if isSignedIn() && isCompanyTeam(resource.data.companyId);
      allow delete: if isSignedIn() && (isCompanyAdmin(resource.data.companyId) || isSuperAdmin());
    }

    // --- COLLECTION GROUPS ---
    match /{path=**}/applications/{appId} {
      allow read: if isSuperAdmin();
      allow read: if isSignedIn() && (resource.data.applicantId == request.auth.uid || resource.data.driverId == request.auth.uid || isEmailOwner(resource.data.email));
      allow read: if isSignedIn() && isCompanyTeam(resource.data.companyId);
    }
    match /{path=**}/leads/{leadId} {
      allow read: if isSuperAdmin();
      allow read: if isSignedIn() && isCompanyTeam(resource.data.companyId);
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
    match /{path=**}/activity_logs/{activityId} {
       allow read: if isSuperAdmin() || (isSignedIn() && isCompanyTeam(resource.data.companyId));
    }
    match /{path=**}/signing_requests/{requestId} {
       allow read: if isSuperAdmin() || (isSignedIn() && resource.data.recipientId == request.auth.uid) || (isSignedIn() && isCompanyTeam(resource.data.companyId));
    }
  }
}
