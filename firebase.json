{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "disallowLegacyRuntimeConfig": true,
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],
  "firestore": {
    "rules": "src/firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "src/storage.rules"
  }
}
